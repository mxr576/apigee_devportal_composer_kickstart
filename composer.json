{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "forked-apigee_edge": {
            "type": "vcs",
            "_comment1": "We have to install it from here until the recent changes introduced in the workflow does not get released in a new alpha version.",
            "url": "https://github.com/mxr576/apigee-devportal-drupal"
        },
        "fixed-composer-patches": {
            "type": "package",
            "package": {
                "name": "mxr576/composer-patches",
                "description": "We have to install it from here until https://github.com/cweagans/composer-patches/pull/224 does not get merged because composer-patches can not patch itself on 'composer install'.",
                "version": "1.0.180711",
                "type": "library",
                "dist": {
                    "url": "https://github.com/mxr576/composer-patches/archive/patch-1.zip",
                    "type": "zip"
                },
                "replace": {
                    "cweagans/composer-patches": "1.6.*"
                }
            }
        },
        "swagger_ui": {
            "type": "package",
            "package": {
                "name": "mxr576/swagger-ui",
                "description": "Swagger UI composer package does not contains some required information to be installed by composer/installer.",
                "version": "3.17.3",
                "type": "drupal-library",
                "extra": {
                    "installer-name": "swagger_ui"
                },
                "dist": {
                    "url": "https://github.com/swagger-api/swagger-ui/archive/v3.17.3.zip",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "~1.0"
                },
                "replace": {
                    "swagger-api/swagger-ui": "3.17.*"
                }
            }
        }
    },
    "require": {
        "composer/installers": "^1.5",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/apigee_edge": "dev-workflow",
        "drupal/console": "^1.0.2",
        "drupal/core": "~8.5.5",
        "drupal/swagger_ui_formatter": "^2.0",
        "drush/drush": "^9.0.0",
        "mxr576/composer-patches": "^1.0",
        "mxr576/swagger-ui": "^3.17",
        "swagger-api/swagger-ui": "^3.17",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "~8.5.5"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "_comment1": "Without the wikimedia/composer-merge-plugin drupal/core patches does not get applied from contrib modules automatically. See: https://github.com/cweagans/composer-patches/issues/219",
        "merge-plugin": {
            "include": [
                "web/modules/contrib/*/composer.json",
                "web/modules/custom/*/composer.json",
                "web/themes/contrib/*/composer.json",
                "web/themes/custom/*/composer.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true
        }
    }
}
